<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
    </style>

    <style name="ToolBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textColor">@color/orage</item>
        <item name="android:textSize">@dimen/headingTextSize</item>
    </style>
    <style name="AppEditTextStyle">
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_editexts</item>
        <item name="android:padding">@dimen/paddingEditText</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
    </style>

    <style name="ListViewRowStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>
    <style name="AppButtonStyle">
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="AppButtonStyleInLists">
        <item name="android:layout_width">@dimen/buttonWidthInList</item>
        <item name="android:layout_height">@dimen/buttonHeightInList</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttonTextSizeInList</item>
    </style>
    <style name="screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="userScreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
